{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@screens": ["./screens"],
      "@screens/*": ["./screens/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@colors": ["./theme/colors"],
      "@context": ["./context"],
      "@context/*": ["./context/*"],
      "@navigation": ["./navigation"],
      "@navigation/*": ["./navigation/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@api": ["./api"],
      "@api/*": ["./api/*"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
    }
  }
}
